<p id="notice"><%= notice %></p>

<h1><i>Listing Links</i></h1>
<br>

<table>
  <thead>
    <%#<tr>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>%>
  </thead>

  <tbody>
    <% @links.each do |link| %>

      <h4><%= link_to link.title, link %><br>
        Submitted <%= time_ago_in_words(link.created_at) %>
        by <%= link.user.email %>
      </h4>
        <% if link.user == current_user%>
          <button type="button"><%= link_to 'Edit', edit_link_path(link) %></button>
          <button type="button"><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        <%end%>


      <%= link_to like_link_path(link), method: :put do %>
        <button type="button">upvote <%= link.get_upvotes.size %></button>

      <% end %>

      <%= link_to dislike_link_path(link), method: :put do %>
        <button type="button">downvote <%= link.get_downvotes.size %></button>

      <% end %>

    <% end %>
    <br>
    <br>
  </tbody>
</table>

<br>
